{
  "compilerOptions": {
    "target": "esnext",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "types": [
        "webpack-env"
    ]
  },
  "typedocOptions": {
    "name": "Invest or Defend (Client)",
    "entryPoints": "src",
    "out": "public/docs",
    "readme": "README.md",
    "listInvalidSymbolLinks": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "tests",
    "public"
  ]
}
