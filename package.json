{
  "name": "invest-or-defend-client",
  "version": "0.0.0",
  "description": "A Web client for an educational game about risk calculation.",
  "scripts": {
    "build": "SET NODE_ENV=production & webpack --config ./webpack.config.ts --mode=production",
    "dev": "webpack serve",
    "start": "node server.js",
    "start:dev": "webpack-dev-server --config ./webpack.config.ts",
    "test": "NODE_ENV=test mocha -r ts-node/register tests/**.test.ts --exit --timeout 5000 --retries 2",
    "coverage": "NODE_ENV=test nyc npm run test",
    "format": "npm run format:js",
    "format:fix": "npm run format:js:fix",
    "format:js": "prettier --config .prettierrc 'src/**/*.ts'",
    "format:js:fix": "npm run format:js -- --write",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint '*/**/*.{js,ts}'",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint \"src/css/*.(sa|sc|c)ss\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "https://delta.lancs.ac.uk/secure-digitalisation/invest-or-defend/client"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run format:js:fix",
      "npm run lint:js"
    ],
    "*.(sa|sc|c)ss": [
      "npm run lint:css"
    ]
  },
  "private": true,
  "keywords": [],
  "author": "Ben Goldsworthy",
  "license": "CRAPL",
  "licenseUrl": "http://matt.might.net/articles/crapl/",
  "homepage": "https://www.lancaster.ac.uk/cybersecurity/secure-digitalisation/",
  "devDependencies": {
    "@types/mongoose": "^5.10.5",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@webpack-cli/serve": "^1.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.1",
    "handlebars-webpack-plugin": "^2.2.1",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^5.0.0",
    "nyc": "^15.1.0",
    "postcss-loader": "^4.2.0",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.12.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "terser-webpack-plugin": "^2.2.1",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "jquery": "^3.6.0",
    "win-node-env": "^0.4.0"
  },
  "bugs": {
    "url": "https://delta.lancs.ac.uk/secure-digitalisation/invest-or-defend/client"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}