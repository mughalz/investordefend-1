<section class="modal" id="turn-results">
	<section class="modal__close">
		<button class="button modal__button modal__button--close">&#10060;</button>
	</section>
	
	<header>
	
	  <h1 class="modal__title">Turn Results</h1>

	  <p class="modal__text">Amount spent: <span class="amount-spent"></span></p>
	  <p class="modal__text">Amount invested: <span class="positive amount-invested"></span></p>
	  <p class="modal__text">Amount lost: <span class="negative amount-lost"></span></p><br>
	</header>
	
	<main class="modal__content">
	
		<table class="table" id="turn-events">
		</table>

	</main>
	
	<footer class="modal__actions">
	
	  <button class="button modal__button modal__button--close">Close</button>
	  
	</footer>
</section>
